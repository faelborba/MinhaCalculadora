<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962">

        <Button
            android:id="@+id/botao8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="8"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="clicaBotao"/>


        <Button
            android:id="@+id/botao7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="7"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botaoSubtrai"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#002DC4"
            android:shadowColor="#00FFFFFF"
            android:text="-"
            app:layout_column="3"
            app:layout_row="2"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="0"
            app:layout_column="0"
            app:layout_row="4"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botaoPonto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="."
            app:layout_column="2"
            app:layout_row="4"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botaoIgual"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#C90000"
            android:shadowColor="#00FFFFFF"
            android:text="="
            app:layout_column="3"
            app:layout_row="4"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botaoSoma"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#002DC4"
            android:shadowColor="#00FFFFFF"
            android:text="+"
            app:layout_column="3"
            app:layout_row="3"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="3"
            app:layout_column="2"
            app:layout_row="3"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="2"
            app:layout_column="1"
            app:layout_row="3"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="1"
            app:layout_column="0"
            app:layout_row="3"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/porcento"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#002DC4"
            android:shadowColor="#00FFFFFF"
            android:text="%"
            app:layout_column="3"
            app:layout_row="0"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botao9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:text="9"
            app:layout_column="2"
            app:layout_row="1"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botaoMultiplica"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#002DC4"
            android:shadowColor="#00FFFFFF"
            android:text="X"
            app:layout_column="3"
            app:layout_row="1"
            android:onClick="clicaBotao"/>

        <Button
            android:id="@+id/botaoClear"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FB8C00"
            android:shadowColor="#00FFFFFF"
            android:text="C"
            app:layout_column="0"
            app:layout_row="0"
            android:onClick="clicaBotao"/>
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/campoResultado"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:layout_marginBottom="4dp"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.674"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.987" />
</androidx.constraintlayout.widget.ConstraintLayout>